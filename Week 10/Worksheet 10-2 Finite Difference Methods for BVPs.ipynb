      "source": [
        "# Use finest mesh for detailed analysis\nfinest_solution = solutions[node_counts[-1]]\nx_fine = finest_solution['x']\nh_fine = finest_solution['h']\n\n# Calculate hydraulic gradients (flow directions)\ngradients = np.gradient(h_fine, x_fine)\n\n# Calculate flow rates using Darcy's law: q = -K * A * (dh/dx)\n# Assume unit width, so A = thickness = 25 m\nflow_rates = -K * b * gradients  # m²/s per unit width\n\nprint(\"=== Engineering Analysis Results ===\")\nprint(f\"Using finest mesh: {len(x_fine)} nodes, Δx = {x_fine[1]-x_fine[0]:.1f} m\")\nprint()\n\n# 1. Head distribution analysis\nmax_head = np.max(h_fine)\nmin_head = np.min(h_fine)\nmax_head_loc = x_fine[np.argmax(h_fine)]\nmin_head_loc = x_fine[np.argmin(h_fine)]\n\nprint(\"1. Hydraulic Head Distribution:\")\nprint(f\"   Maximum head: {max_head:.2f} m at x = {max_head_loc:.0f} m\")\nprint(f\"   Minimum head: {min_head:.2f} m at x = {min_head_loc:.0f} m\")\nprint(f\"   Total head loss: {max_head - min_head:.2f} m\")\nprint()\n\n# 2. Flow analysis at boundaries\nriver_inflow = -flow_rates[0]  # Flow from river (positive = into aquifer)\nbedrock_outflow = flow_rates[-1]  # Flow toward bedrock (positive = away from wells)\n\nprint(\"2. Boundary Flow Analysis:\")\nprint(f\"   River inflow: {river_inflow:.4f} m²/s per unit width\")\nprint(f\"   Flow toward bedrock: {bedrock_outflow:.4f} m²/s per unit width\")\nprint(f\"   Net boundary flow: {river_inflow - bedrock_outflow:.4f} m²/s per unit width\")\nprint(f\"   Total well pumping: {abs(well_1_rate + well_2_rate):.4f} m³/s\")\nprint()\n\n# 3. Flow budget check (mass conservation)\nwell_pumping_total = abs(well_1_rate + well_2_rate)\nboundary_flow_total = river_inflow - bedrock_outflow\nflow_balance_error = abs(well_pumping_total - boundary_flow_total) / well_pumping_total * 100\n\nprint(\"3. Mass Conservation Check:\")\nprint(f\"   Well pumping rate: {well_pumping_total:.4f} m³/s\")\nprint(f\"   Net boundary inflow: {boundary_flow_total:.4f} m³/s\")\nprint(f\"   Flow balance error: {flow_balance_error:.2f}%\")\nif flow_balance_error < 5:\n    print(\"   ✅ Mass conservation satisfied (error < 5%)\")\nelse:\n    print(\"   ⚠️  Large flow balance error - check boundary conditions\")\nprint()\n\n# 4. Well interference analysis\nh_well1 = np.interp(well_1_location, x_fine, h_fine)\nh_well2 = np.interp(well_2_location, x_fine, h_fine)\ndrawdown_well1 = h_river - h_well1\ndrawdown_well2 = h_river - h_well2\n\nprint(\"4. Well Performance Analysis:\")\nprint(f\"   Well 1 (x={well_1_location:.0f}m, Q={abs(well_1_rate):.3f} m³/s):\")\nprint(f\"     Head: {h_well1:.2f} m\")\nprint(f\"     Drawdown: {drawdown_well1:.2f} m\")\nprint(f\"     Specific capacity: {abs(well_1_rate)/drawdown_well1:.5f} m²/s per m drawdown\")\nprint()\nprint(f\"   Well 2 (x={well_2_location:.0f}m, Q={abs(well_2_rate):.3f} m³/s):\")\nprint(f\"     Head: {h_well2:.2f} m\")\nprint(f\"     Drawdown: {drawdown_well2:.2f} m\")\nprint(f\"     Specific capacity: {abs(well_2_rate)/drawdown_well2:.5f} m²/s per m drawdown\")\nprint()\n\n# 5. Create comprehensive results plot\nfig, ((ax1, ax2), (ax3, ax4)) = plt.subplots(2, 2, figsize=(16, 12))\n\n# Head distribution\nax1.plot(x_fine, h_fine, 'b-', linewidth=3, label='Hydraulic head')\nax1.axhline(y=h_river, color='cyan', linestyle='--', alpha=0.7, label=f'River level ({h_river}m)')\nax1.scatter([well_1_location, well_2_location], [h_well1, h_well2], \n           c='red', s=100, marker='v', label='Wells', zorder=5)\nax1.set_xlabel('Distance from river (m)')\nax1.set_ylabel('Hydraulic head (m)')\nax1.set_title('Hydraulic Head Distribution')\nax1.legend()\nax1.grid(True, alpha=0.3)\n\n# Hydraulic gradients\nax2.plot(x_fine, gradients, 'g-', linewidth=2, label='dh/dx')\nax2.axhline(y=0, color='black', linestyle='-', alpha=0.5)\nax2.axhline(y=grad_bedrock, color='orange', linestyle='--', \n           label=f'Boundary condition ({grad_bedrock:.3f})')\nax2.scatter([well_1_location, well_2_location], \n           [np.interp(well_1_location, x_fine, gradients),\n            np.interp(well_2_location, x_fine, gradients)],\n           c='red', s=100, marker='v', zorder=5)\nax2.set_xlabel('Distance from river (m)')\nax2.set_ylabel('Hydraulic gradient (dh/dx)')\nax2.set_title('Hydraulic Gradient Distribution')\nax2.legend()\nax2.grid(True, alpha=0.3)\n\n# Flow rates\nflow_rates_per_width = flow_rates * 1000  # Convert to L/s per m width for readability\nax3.plot(x_fine, flow_rates_per_width, 'purple', linewidth=2, label='Flow rate')\nax3.axhline(y=0, color='black', linestyle='-', alpha=0.5)\nax3.fill_between(x_fine, 0, flow_rates_per_width, \n                where=(flow_rates_per_width > 0), alpha=0.3, color='blue', \n                label='Flow toward bedrock')\nax3.fill_between(x_fine, 0, flow_rates_per_width, \n                where=(flow_rates_per_width < 0), alpha=0.3, color='red',\n                label='Flow toward river')\nax3.set_xlabel('Distance from river (m)')\nax3.set_ylabel('Flow rate (L/s per m width)')\nax3.set_title('Groundwater Flow Distribution')\nax3.legend()\nax3.grid(True, alpha=0.3)\n\n# Drawdown cone\ndrawdown = h_river - h_fine\nax4.fill_between(x_fine, h_river, h_fine, alpha=0.3, color='red', label='Drawdown')\nax4.plot(x_fine, h_fine, 'b-', linewidth=3, label='Water table')\nax4.axhline(y=h_river, color='cyan', linestyle='-', linewidth=2, label='Original level')\nax4.scatter([well_1_location, well_2_location], [h_well1, h_well2], \n           c='red', s=100, marker='v', label='Wells', zorder=5)\nax4.set_xlabel('Distance from river (m)')\nax4.set_ylabel('Elevation (m)')\nax4.set_title('Cone of Depression')\nax4.legend()\nax4.grid(True, alpha=0.3)\n\nplt.tight_layout()\nplt.show()"
