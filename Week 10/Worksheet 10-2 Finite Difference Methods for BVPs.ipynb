      "source": [
        "# Mesh refinement study\n",
        "node_counts = [6, 11, 21, 41, 81]\n",
        "solutions = {}\n",
        "\n",
        "print(\"=== Mesh Refinement Study ===\")\nfor n in node_counts:\n    x, h = solve_groundwater_bvp(n, [well_1_rate, well_2_rate], \n                                [well_1_location, well_2_location])\n    solutions[n] = {'x': x, 'h': h}\n    \n    # Find minimum head and its location\n    min_idx = np.argmin(h)\n    min_head = h[min_idx]\n    min_location = x[min_idx]\n    \n    print(f\"n={n:2d} nodes: Δx={L/(n-1):6.1f}m, min head = {min_head:.3f}m at x={min_location:.0f}m\")\n\n# Plot all solutions\nfig, (ax1, ax2) = plt.subplots(1, 2, figsize=(16, 6))\n\n# Full domain plot\ncolors = ['red', 'blue', 'green', 'orange', 'purple']\nfor i, n in enumerate(node_counts):\n    sol = solutions[n]\n    ax1.plot(sol['x'], sol['h'], 'o-', color=colors[i], \n             label=f'n={n} (Δx={L/(n-1):.0f}m)', markersize=4, linewidth=2)\n\nax1.set_xlabel('Distance from river (m)')\nax1.set_ylabel('Hydraulic head (m)')\nax1.set_title('Mesh Refinement: Full Domain')\nax1.legend()\nax1.grid(True, alpha=0.3)\n\n# Zoom in around Well 1 to see convergence\nzoom_start, zoom_end = 200, 600\nfor i, n in enumerate(node_counts):\n    sol = solutions[n]\n    mask = (sol['x'] >= zoom_start) & (sol['x'] <= zoom_end)\n    ax2.plot(sol['x'][mask], sol['h'][mask], 'o-', color=colors[i], \n             label=f'n={n}', markersize=6, linewidth=2)\n\nax2.axvline(x=well_1_location, color='red', linestyle='--', alpha=0.7, label='Well 1')\nax2.set_xlabel('Distance from river (m)')\nax2.set_ylabel('Hydraulic head (m)')\nax2.set_title('Convergence Near Well 1 (Zoomed)')\nax2.legend()\nax2.grid(True, alpha=0.3)\n\nplt.tight_layout()\nplt.show()\n\n# Quantify convergence\nprint(\"\\n=== Convergence Analysis ===\")\nprint(\"Head at Well 1 location (x=400m):\")\nfor n in node_counts:\n    sol = solutions[n]\n    # Interpolate to exact well location\n    h_well1 = np.interp(well_1_location, sol['x'], sol['h'])\n    print(f\"n={n:2d}: h = {h_well1:.4f} m\")\n\n# Check if finest mesh is converged\nfinest = solutions[node_counts[-1]]\nsecond_finest = solutions[node_counts[-2]]\nh_well1_finest = np.interp(well_1_location, finest['x'], finest['h'])\nh_well1_second = np.interp(well_1_location, second_finest['x'], second_finest['h'])\nconvergence_error = abs(h_well1_finest - h_well1_second)\nprint(f\"\\nConvergence check: |h_finest - h_second_finest| = {convergence_error:.6f} m\")\nif convergence_error < 0.01:\n    print(\"✅ Solution appears converged (error < 1 cm)\")\nelse:\n    print(\"⚠️  Solution may need finer mesh for full convergence\")"
      ]
